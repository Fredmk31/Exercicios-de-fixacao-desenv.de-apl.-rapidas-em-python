Questão 4 

import tkinter as tk

def dizer_ola():
    print("Olá!")

janela = tk.Tk()
janela.title("Olá Mundo")
janela.geometry("400x300")

botao = tk.Button(janela, text="Clique aqui", command=dizer_ola)
botao.pack()

janela.mainloop()




Questão 5 

import tkinter as tk

def exibir_dados():
    nome = entry_nome.get()
    idade = entry_idade.get()
    print(f"Nome: {nome}, Idade: {idade}")

janela = tk.Tk()
janela.title("Formulário")
janela.geometry("400x300")

entry_nome = tk.Entry(janela)
entry_nome.pack()

entry_idade = tk.Entry(janela)
entry_idade.pack()

botao = tk.Button(janela, text="Exibir", command=exibir_dados)
botao.pack()

janela.mainloop()




Questão 6 

import tkinter as tk
from tkinter import messagebox

def exibir_dados():
    nome = entry_nome.get()
    idade = entry_idade.get()
    messagebox.showinfo("Informações", f"Nome: {nome}\nIdade: {idade}")

janela = tk.Tk()
janela.title("Formulário")
janela.geometry("400x300")

entry_nome = tk.Entry(janela)
entry_nome.pack()

entry_idade = tk.Entry(janela)
entry_idade.pack()

botao = tk.Button(janela, text="Exibir", command=exibir_dados)
botao.pack()

janela.mainloop()


Questão 7

import tkinter as tk

def limpar_campos():
    entry_nome.delete(0, tk.END)
    entry_idade.delete(0, tk.END)

janela = tk.Tk()
janela.title("Formulário")
janela.geometry("400x300")

entry_nome = tk.Entry(janela)
entry_nome.pack()

entry_idade = tk.Entry(janela)
entry_idade.pack()

botao_limpar = tk.Button(janela, text="Limpar", command=limpar_campos)
botao_limpar.pack()

janela.mainloop()


Questão 8

import tkinter as tk

def mudar_texto():
    label_nome.config(text="Nome Completo")

janela = tk.Tk()
janela.title("Formulário")
janela.geometry("400x300")

label_nome = tk.Label(janela, text="Nome:")
label_nome.pack()

entry_nome = tk.Entry(janela)
entry_nome.pack()

botao_mudar = tk.Button(janela, text="Mudar Texto", command=mudar_texto)
botao_mudar.pack()

janela.mainloop()


Questão 9 

import tkinter as tk
import sqlite3
from tkinter import messagebox

def salvar_no_banco():
    nome = entry_nome.get()
    idade = entry_idade.get()

    if nome == "" or idade == "":
        messagebox.showwarning("Aviso", "Preencha os campos")
        return

    try:
        conn = sqlite3.connect("dados.db")
        cursor = conn.cursor()
        cursor.execute("""
            CREATE TABLE IF NOT EXISTS pessoas (
                id INTEGER PRIMARY KEY AUTOINCREMENT,
                nome TEXT,
                idade INTEGER
            )
        """)
        cursor.execute("INSERT INTO pessoas (nome, idade) VALUES (?, ?)", (nome, idade))
        conn.commit()
        conn.close()
        messagebox.showinfo("Sucesso", "Dados salvos com sucesso!")
    except Exception as e:
        messagebox.showerror("Erro", str(e))

janela = tk.Tk()
janela.title("Banco de Dados")
janela.geometry("400x300")

entry_nome = tk.Entry(janela)
entry_nome.pack()

entry_idade = tk.Entry(janela)
entry_idade.pack()

botao_salvar = tk.Button(janela, text="Salvar no Banco", command=salvar_no_banco)
botao_salvar.pack()

janela.mainloop()

Questão 10 

import tkinter as tk
from tkinter import messagebox

def converter():
    try:
        celsius = float(entry_celsius.get())
        fahrenheit = celsius * 9/5 + 32
        label_resultado.config(text=f"{fahrenheit:.2f} °F")
    except ValueError:
        messagebox.showerror("Erro", "Digite um número válido.")


janela = tk.Tk()
janela.title("Conversor de Temperatura")
janela.geometry("300x200")


label_instrucao = tk.Label(janela, text="Digite a temperatura em Celsius:")
label_instrucao.pack(pady=10)

entry_celsius = tk.Entry(janela)
entry_celsius.pack()


botao_converter = tk.Button(janela, text="Converter", command=converter)
botao_converter.pack(pady=10)


label_resultado = tk.Label(janela, text="", font=("Arial", 14))
label_resultado.pack(pady=10)

# Loop da interface
janela.mainloop()
